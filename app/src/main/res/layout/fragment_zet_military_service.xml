<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <com.team.ozet.views.custom_view.DefaultAppbar
            android:id="@+id/appbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat = "@drawable/icon_back_"
            app:tv_appbar_title = "병역"
            android:textColor = "@color/ozet"
            app:tv_appbar_sub_title = "저장하기"
            />

        <TextView
            android:id="@+id/tv_military_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            android:layout_marginTop="30dp"
            android:text="병역구분"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />




                <RadioButton
                    android:id="@+id/rb_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="군필"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_military_select"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="8dp"
                    />

                <RadioButton
                    android:id="@+id/rb_yet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미필"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="@+id/rb_finish"
                    app:layout_constraintLeft_toRightOf="@+id/rb_finish"
                    app:layout_constraintRight_toLeftOf="@id/center"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="8dp"
                    />


                <View
                    android:id="@+id/center"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toRightOf="@id/rb_finish"
                    app:layout_constraintRight_toLeftOf="@id/rb_not"
                    app:layout_constraintTop_toTopOf="@id/rb_not"
                    app:layout_constraintBottom_toBottomOf="@id/rb_not"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="8dp"
                    />
                <RadioButton
                    android:id="@+id/rb_exemption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="면제"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="@+id/rb_finish"
                    app:layout_constraintRight_toLeftOf="@+id/rb_not"
                    app:layout_constraintLeft_toRightOf="@+id/center"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="8dp"
                    />

                <RadioButton
                    android:id="@+id/rb_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="해당없음"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="@+id/rb_finish"
                    app:layout_constraintRight_toRightOf="parent"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="8dp"
                    />






        <com.team.ozet.views.custom_view.DatePickerTextView
            android:id="@+id/cm_date_military_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/rb_finish"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_center"
            app:tv_title_name="복무 기간"
            android:paddingRight="3dp"
            app:tv_date_text = "YYYY.MM.DD"
            app:date_mode ="1"
            />

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/cm_date_military_end"
            app:layout_constraintTop_toTopOf="@+id/cm_date_military_end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14sp"
            android:text="~"

            />


        <com.team.ozet.views.custom_view.DatePickerTextView
            android:id="@+id/cm_date_military_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/cm_date_military_start"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_center"
            android:paddingLeft="3dp"
            app:tv_title_visibility = "false"
            app:tv_date_text = "YYYY.MM.DD"
            app:date_mode ="1"
            />



        <com.team.ozet.views.custom_view.DefaultEditText
            android:id="@+id/cm_default_exemption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cm_date_military_start"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            app:tv_title = "면제 사유"
            app:et_input_hint = "면제 사유를 입력해주세요"
            />


        <include
            android:id="@+id/include_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            layout="@layout/button_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>